{
  "name": "@cleancue/desktop",
  "version": "0.2.4",
  "description": "CleanCue Desktop Application",
  "homepage": "https://github.com/CommmandrCody/CleanCue",
  "author": "CleanCue Team <team@cleancue.com>",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:ui\" \"npm run dev:electron\"",
    "dev:ui": "cd ../../packages/ui && npm run dev",
    "dev:electron": "npx tsc && ./run_electron.sh",
    "build": "npx tsc && npm run build:ui && npm run copy:ui && npm run bundle:aubio && electron-builder",
    "bundle:aubio": "mkdir -p resources/aubio && cp -r /usr/local/opt/aubio/bin/* resources/aubio/ && cp /usr/local/opt/aubio/lib/*.dylib resources/aubio/ 2>/dev/null || true",
    "build:ui": "cd ../../packages/ui && npm run build",
    "copy:ui": "mkdir -p dist/ui && cp -r ../../packages/ui/dist/* dist/ui/",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux",
    "dist:all": "electron-builder --mac --win --linux"
  },
  "dependencies": {
    "@cleancue/simple-engine": "workspace:*",
    "@cleancue/shared": "workspace:*",
    "bindings": "^1.5.0",
    "debug": "^4.3.4",
    "electron-squirrel-startup": "^1.0.1",
    "file-uri-to-path": "^2.0.0",
    "ms": "^2.1.2",
    "music-metadata": "^11.8.3"
  },
  "devDependencies": {
    "@electron/get": "^4.0.2",
    "@types/node": "^20.8.0",
    "concurrently": "^8.2.2",
    "electron": "^38.1.2",
    "electron-builder": "^24.6.4",
    "typescript": "^5.3.0"
  },
  "build": {
    "appId": "com.cleancue.desktop",
    "productName": "CleanCue",
    "copyright": "Copyright Â© 2025 CleanCue",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "**/node_modules/bindings/**/*",
      "**/node_modules/file-uri-to-path/**/*",
      "**/node_modules/debug/**/*",
      "**/node_modules/ms/**/*",
      "**/node_modules/music-metadata/**/*",
      "**/node_modules/strtok3/**/*",
      "**/node_modules/token-types/**/*",
      "**/node_modules/peek-readable/**/*",
      "**/node_modules/@cleancue/simple-engine/**/*",
      "**/node_modules/@cleancue/shared/**/*",
      "**/node_modules/sql.js/**/*",
      "**/node_modules/fast-glob/**/*",
      "**/node_modules/uuid/**/*",
      "**/node_modules/xxhash-wasm/**/*",
      "**/node_modules/axios/**/*"
    ],
    "extraResources": [
      {
        "from": "../../packages/simple-engine",
        "to": "simple-engine",
        "filter": [
          "**/*",
          "!node_modules/**",
          "!**/*.test.*",
          "!**/*.spec.*"
        ]
      },
      {
        "from": "../../packages/shared",
        "to": "shared",
        "filter": [
          "**/*",
          "!node_modules/**",
          "!**/*.test.*",
          "!**/*.spec.*"
        ]
      },
      {
        "from": "resources/aubio",
        "to": "aubio",
        "filter": "**/*"
      }
    ],
    "mac": {
      "category": "public.app-category.music",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "identity": "Cody Campbell (9SD7PQ82B3)",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "portable": {
      "artifactName": "${productName}-${version}-${arch}-Portable.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "AudioVideo",
      "artifactName": "cleancue-${version}-${arch}.${ext}"
    }
  }
}