{
  "name": "@cleancue/desktop",
  "version": "0.2.0",
  "description": "CleanCue Desktop Application",
  "homepage": "https://github.com/CommmandrCody/CleanCue",
  "author": "CleanCue Team <team@cleancue.com>",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:ui\" \"npm run dev:electron\"",
    "dev:ui": "cd ../../packages/ui && npm run dev",
    "dev:electron": "npx tsc && ./run_electron.sh",
    "build": "npx tsc && npm run build:ui && npm run copy:ui && electron-builder",
    "build:ui": "cd ../../packages/ui && npm run build",
    "copy:ui": "mkdir -p dist/ui && cp -r ../../packages/ui/dist/* dist/ui/",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux",
    "dist:all": "electron-builder --mac --win --linux"
  },
  "dependencies": {
    "@cleancue/engine": "workspace:*",
    "@cleancue/shared": "workspace:*",
    "debug": "^4.4.3",
    "electron-squirrel-startup": "^1.0.1",
    "electron-to-chromium": "^1.5.221",
    "fs-extra": "^11.3.2",
    "ms": "^2.1.3"
  },
  "devDependencies": {
    "@electron/get": "^4.0.2",
    "@types/node": "^20.8.0",
    "concurrently": "^8.2.2",
    "electron": "^38.1.2",
    "electron-builder": "^24.6.4",
    "typescript": "^5.2.2"
  },
  "build": {
    "appId": "com.cleancue.desktop",
    "productName": "CleanCue",
    "copyright": "Copyright Â© 2024 CleanCue",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "../../packages/workers",
        "to": "workers",
        "filter": [
          "**/*",
          "!**/*.pyc",
          "!**/__pycache__"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.music",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "identity": "Cody Campbell (9SD7PQ82B3)",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "publisherName": "CleanCue Team"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}