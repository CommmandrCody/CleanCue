{
  "name": "@cleancue/desktop",
  "version": "0.1.0",
  "description": "CleanCue Desktop Application",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:ui\" \"npm run dev:electron\"",
    "dev:ui": "cd ../../packages/ui && npm run dev",
    "dev:electron": "npx tsc && electron dist/main.js --dev",
    "build": "npx tsc && npm run build:ui && electron-builder",
    "build:ui": "cd ../../packages/ui && npm run build",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux",
    "dist:all": "electron-builder --mac --win --linux"
  },
  "dependencies": {
    "@cleancue/engine": "workspace:*",
    "@cleancue/shared": "workspace:*",
    "electron-squirrel-startup": "^1.0.1",
    "electron-to-chromium": "^1.5.221",
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "@electron/get": "^4.0.2",
    "@types/node": "^20.8.0",
    "concurrently": "^8.2.2",
    "electron": "^38.1.2",
    "electron-builder": "^24.6.4",
    "typescript": "^5.2.2"
  },
  "build": {
    "appId": "com.cleancue.desktop",
    "productName": "CleanCue",
    "copyright": "Copyright Â© 2024 CleanCue",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "../../packages/ui/dist/**/*",
      "../../packages/workers/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "../../packages/workers",
        "to": "workers",
        "filter": [
          "**/*",
          "!**/*.pyc",
          "!**/__pycache__"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.music",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ]
    }
  }
}