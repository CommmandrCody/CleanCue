{
  "name": "cleancue",
  "version": "0.2.2",
  "private": true,
  "description": "Open-source, offline-first DJ library management toolkit",
  "author": "CommndrCody",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "test": "jest --passWithNoTests",
    "test:unit": "pnpm -r test",
    "test:ui": "pnpm --filter @cleancue/ui test",
    "test:e2e": "jest tests/",
    "test:build": "./scripts/test-build.sh",
    "test:health": "./scripts/health-check.sh",
    "test:all": "pnpm run test:health && pnpm run test:unit && pnpm run test:ui && pnpm run test:build",
    "ci": "./scripts/local-ci.sh",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check",
    "cli": "pnpm --filter @cleancue/cli",
    "desktop": "pnpm --filter @cleancue/desktop"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "spectron": "^19.0.0",
    "electron": "^27.0.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
